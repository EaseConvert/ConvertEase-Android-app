<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="360dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:theme="@style/MyTheme.MainScreen"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tiltneon"
                        android:text="ConvertEase"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/settingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:contentDescription="settings_icon"
                        android:src="@drawable/setting_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.908"
                        app:layout_constraintStart_toEndOf="@+id/textView10"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.372"
                        app:tint="@color/white" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <android.widget.Button
            android:id="@+id/pdf_btn"
            android:layout_width="151dp"
            android:layout_height="203dp"
            android:background="@drawable/home_page_pdf_btn"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
            app:layout_constraintVertical_bias="0.05" />

        <ImageView
            android:elevation="10dp"
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_btn"
            app:layout_constraintEnd_toEndOf="@+id/img_btn"
            app:layout_constraintStart_toStartOf="@+id/img_btn"
            app:layout_constraintTop_toTopOf="@+id/img_btn"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/images" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Image"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_btn"
            app:layout_constraintEnd_toEndOf="@+id/img_btn"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/img_btn"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Image Compressor Crop Image Convert To PDF"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_btn"
            app:layout_constraintEnd_toEndOf="@+id/img_btn"
            app:layout_constraintStart_toStartOf="@+id/img_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <android.widget.Button
            android:id="@+id/img_btn"
            android:layout_width="151dp"
            android:layout_height="203dp"
            android:background="@drawable/home_page_image_btn"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pdf_btn"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
            app:layout_constraintVertical_bias="0.05" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/pdf_btn"
            app:layout_constraintEnd_toEndOf="@+id/pdf_btn"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/pdf_btn"
            app:layout_constraintTop_toTopOf="@+id/pdf_btn"
            app:layout_constraintVertical_bias="0.09"
            app:srcCompat="@drawable/pdf" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="PDF"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pdf_btn"
            app:layout_constraintEnd_toEndOf="@+id/pdf_btn"
            app:layout_constraintStart_toStartOf="@+id/pdf_btn"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Split PDF, Convert To Docx merge PDFs"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/pdf_btn"
            app:layout_constraintEnd_toEndOf="@+id/pdf_btn"
            app:layout_constraintStart_toStartOf="@+id/pdf_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <android.widget.Button
            android:id="@+id/text_btn"
            android:layout_width="151dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/home_page_text_btn"
            android:elevation="0dp"
            android:padding="20dp"
            android:textColor="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/folder_btn"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn"
            app:layout_constraintVertical_bias="0.286" />

        <android.widget.Button
            android:id="@+id/folder_btn"

            android:layout_width="151dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/home_page_folder_btn"
            android:elevation="0dp"
            android:padding="20dp"
            android:textColor="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pdf_btn"
            app:layout_constraintVertical_bias="0.286" />

        <ImageView

            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_btn"
            app:layout_constraintEnd_toEndOf="@+id/text_btn"
            app:layout_constraintStart_toStartOf="@+id/text_btn"
            app:layout_constraintTop_toTopOf="@+id/text_btn"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/txt" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/folder_btn"
            app:layout_constraintEnd_toEndOf="@+id/folder_btn"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/folder_btn"
            app:layout_constraintTop_toTopOf="@+id/folder_btn"
            app:layout_constraintVertical_bias="0.1"
            app:srcCompat="@drawable/folder" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="TXT File"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_btn"
            app:layout_constraintEnd_toEndOf="@+id/text_btn"
            app:layout_constraintStart_toStartOf="@+id/text_btn"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Change Styling \nChnage Case"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_btn"
            app:layout_constraintEnd_toEndOf="@+id/text_btn"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="@+id/text_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Folder"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/folder_btn"
            app:layout_constraintEnd_toEndOf="@+id/folder_btn"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/folder_btn"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="Compress Folder\n and Files"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/folder_btn"
            app:layout_constraintEnd_toEndOf="@+id/folder_btn"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="@+id/folder_btn"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.242" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


