<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/include2"
        layout="@layout/top_nav_without_setting" />


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/transparent"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Operation"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="0.039" />


    <ImageButton
        android:id="@+id/convertToDocxBtn"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.080" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert To DOCX"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/convertToDocxBtn"
        app:layout_constraintEnd_toEndOf="@+id/convertToDocxBtn"
        app:layout_constraintStart_toStartOf="@+id/convertToDocxBtn"
        app:layout_constraintTop_toTopOf="@+id/convertToDocxBtn" />

    <ImageButton
        android:id="@+id/mergePdfbtn"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertToDocxBtn"
        app:layout_constraintVertical_bias="0.116" />

    <ImageButton
        android:id="@+id/splitPdfBtn"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mergePdfbtn"
        app:layout_constraintVertical_bias="0.200" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merge PDF"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/mergePdfbtn"
        app:layout_constraintEnd_toEndOf="@+id/mergePdfbtn"
        app:layout_constraintStart_toStartOf="@+id/mergePdfbtn"
        app:layout_constraintTop_toTopOf="@+id/mergePdfbtn" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split PDF"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/splitPdfBtn"
        app:layout_constraintEnd_toEndOf="@+id/splitPdfBtn"
        app:layout_constraintStart_toStartOf="@+id/splitPdfBtn"
        app:layout_constraintTop_toTopOf="@+id/splitPdfBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>